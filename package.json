{
  "name": "kenmon",
  "version": "0.0.3",
  "description": "Portable authentication module",
  "author": "SAI Team",
  "license": "MIT",
  "keywords": [
    "authentication",
    "auth",
    "otp",
    "email",
    "nextjs",
    "typescript",
    "portable"
  ],
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./nextjs": {
      "import": "./dist/esm/nextjs/index.js",
      "require": "./dist/cjs/nextjs/index.js",
      "types": "./dist/types/nextjs/index.d.ts"
    },
    "./nextjs/client": {
      "import": "./dist/esm/nextjs/client/index.js",
      "require": "./dist/cjs/nextjs/client/index.js",
      "types": "./dist/types/nextjs/client/index.d.ts"
    }
  },
  "scripts": {
    "format": "pretty-quick --write",
    "format:all": "prettier --write .",
    "test": "tsc --noEmit",
    "build": "npm run build:types && npm run build:esm && npm run build:cjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:esm": "tsc --module es2020 --moduleResolution bundler --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --moduleResolution node --outDir dist/cjs && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "next": "^15.0.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
